    "dotenv": "^16.0.1",
    "express": "^4.17.3",
    "express-async-handler": "^1.2.0",
    "jsonwebtoken": "^8.5.1",
    "nodemailer": "^6.7.5",
    "pg": "^8.7.3",
    "reflect-metadata": "^0.1.13",
    "sitka": "^1.0.5",
    "typeorm": "^0.2.45",
    "unisender": "^1.1.1",
    "uuid": "^3.2.1",
    "validator": "^13.7.0"
  },
  "devDependencies": {
    "@types/chai": "^4.1.6",
    "@types/cookie": "^0.5.1",
    "@types/cookie-parser": "^1.4.3",
    "@types/cors": "^2.8.12",
    "@types/crypto-js": "^4.0.2",
    "@types/dotenv": "^8.2.0",
    "@types/express": "^4.17.13",
    "@types/jsonwebtoken": "^8.5.8",
    "@types/mocha": "^9.0.0",
    "@types/node": "^16.4.13",
    "@types/nodemailer": "^6.4.4",
    "@types/pg": "^8.6.5",
